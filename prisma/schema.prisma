generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id  Int @id @default(autoincrement())
  name        String 
  description String 
  price       Float @default(0.0)
  createdAt   DateTime @default(now()) 
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])

  @@map("products")
  orders Order[] 
  
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())
  products  Product[] // ระบุว่า Category หนึ่งหมวดหมู่มี Product ได้หลายชิ้น

  @@map("categories")
}

model Order {
  id  Int @id @default(autoincrement())
  productId Int  
  product Product @relation(fields: [productId],references: [id])
  @@map("orders")
}

model User{
  id  Int @id @default(autoincrement())
  name        String 
  email String @unique
  password  String 
  createdAt DateTime   @default(now()) 
}

